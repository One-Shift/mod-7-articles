<div role="tabpanel" class="tab-pane {c2r-class}" id="{c2r-nr}">
	<div class="spacer all-15"></div>
	<div class="form-group">
		<label for="inputTitle-{c2r-nr}">{c2r-label-title}</label>
		<input type="text" class="form-control" id="inputTitle-{c2r-nr}" name="title[]" placeholder="{c2r-placeholder-title}" required>
	</div>
	<div class="spacer all-15"></div>
	<div class="form-group">
		<label for="inputDescription-{c2r-nr}">{c2r-label-content}</label>
		<textarea id="inputDescription-{c2r-nr}" class="form-control editor" rows="10" name="content[]"  placeholder="{c2r-placeholder-text}" required=""></textarea>
	</div>
</div>
